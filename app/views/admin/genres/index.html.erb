<div class="container">
  <div class="row">
    <div class="col">
      <h4><strong>ジャンル一覧・追加</strong></h4>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, class: "form-control w-25" %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-6">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>