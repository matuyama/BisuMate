<div class="container">
  <div class="row">
    <div class="col">
      <h4><strong>ジャンル編集</strong></h4>
      <%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, class: "form-control w-25" %>
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>