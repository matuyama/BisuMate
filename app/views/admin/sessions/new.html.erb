<div class="container">
  <h5><strong>ログイン</strong></h5>

  <div class="row">
    <div class="col">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group justify-content-center">
          <%= f.label :email, "メールアドレス", class: "col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control w-50" %>
          <%= f.label :password, "パスワード", class: "col-form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-25" %>
          <div>
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態" %>
          <% end %>
          </div>
          <%= f.submit "ログイン", class: "btn btn-primary mt-2" %>
      <% end %>
    </div>
  </div>
</div>

