<div class="container">
  <h4><strong>注文履歴詳細</strong></h4>
  <div class="row">
    <div class="col-7">
      <table class="table">
      <tr>
        <th>購入者</th>
        <th><%= link_to @order.name, admin_customer_path(@order) %></th>
      </tr>
      <tr>
        <th>注文日</th>
        <th><%= @order.created_at.strftime("%Y/%m/%d") %></th>
      </tr>
      <tr>
        <th>配送先</th>
        <th><%= @order.deliveryTarget %></th>
      </tr>
      <tr>
        <th>支払方法</th>
        <th><%= @order.payment_method_i18n %></th>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <th>
          <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
            <%= f.select :status, Order.statuses.keys.map{|key| [I18n.t("enums.order.status.#{key}"), key]},{selected: @order.status} %>
            <%= f.submit "更新", class: "btn btn-success" %>
          <% end %>
        </th>
      </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>発送ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.price_tax_including %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
            <td>
              <%= form_with model: order_detail, url: admin_order_order_detail_path(order_detail) do |f| %>
                <%= f.select :status, OrderDetail.statuses.keys.map{|key| [I18n.t("enums.order_detail.status.#{key}"), key]},{selected: order_detail.status} %>
                <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
          <% @total += order_detail.subtotal %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <table class="table">
        <tr>
          <th>商品合計</th>
          <th><%= @total %>円</th>
        </tr>
        <tr>
          <th>送料</th>
          <th><%= @order.postage %>円</th>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <th><%= @total + @order.postage %>円</th>
        </tr>
      </table>
    </div>
  </div>
</div>