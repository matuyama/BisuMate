<div class="container">
  <h4><strong><%= @customer.name %>さんの会員詳細</strong></h4>
  <div class="row">
    <div class="col">
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @customer.last_name %> <%= @customer.first_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= @customer.kana_last_name %> <%= @customer.kana_first_name %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.phone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th><%= render "status", customer: @customer %></th>
        </tr>
        <tr>
          <th></th>
          <th>
            <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
            <%= link_to "注文一覧を見る", admin_root_path(customer_id: @customer.id), class: "btn btn-primary" %>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>