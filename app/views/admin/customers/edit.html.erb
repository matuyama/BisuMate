<div class="container">
  <h4><strong><%= @customer.name %>さんの会員情報編集</strong></h4>
  <div class="row">
    <div class="col">
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <%= render "public/customers/form", f: f %>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", {value: :true} %>
            <%= f.radio_button :is_active, :false, class: "ml-5" %>
            <%= f.label :is_active, "退会", {value: :false} %>
          </th>
        </tr>
        <tr>
          <th></th>
          <th><%= f.submit "変更を保存", class: "btn btn-success" %></th>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>