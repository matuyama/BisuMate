<div class="container">
  <h5><strong>新規会員登録</strong></h5>
  <div class="row">
    <div class="col">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="form-group">
        <table class="table table-borderless">
          <tr>
            <th>名前</th>
            <th><%= label :last_name, "(姓)", class: "col-form-label" %></th>
            <th><%= f.text_field :last_name, placeholder:"令和", class: "form-control" %></th>
            <th><%= label :first_name, "(名)", class: "col-form-label" %></th>
            <th><%= f.text_field :first_name, placeholder:"道子", class: "form-control" %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= label :kana_last_name, "(セイ)", class: "col-form-label" %></th>
            <th><%= f.text_field :kana_last_name, placeholder:"レイワ", class: "form-control" %></th>
            <th><%= f.label :kana_first_name, "(メイ)", class: "col-form-label" %></th>
            <th><%= f.text_field :kana_first_name, placeholder: "ミチコ", class: "form-control" %></th>
          </tr>
          <tr>
            <th><%= f.label :email, "メールアドレス", class: "col-form-label" %></th>
            <th></th>
            <th><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></th>
          </tr>
          <tr>
            <th><%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-form-label" %></th>
            <th></th>
            <th><%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %></th>
          </tr>
          <tr>
            <th><%= f.label :address, "住所", class: "col-form-label" %></th>
            <th></th>
            <th colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %></th>
          </tr>
          <tr>
            <th><%= f.label :phone_number, "電話番号(ハイフンなし)", class: "col-form-label" %></th>
            <th></th>
            <th><%= f.telephone_field :phone_number, placeholder: "00000000000", class: "form-control" %></th>
          </tr>
          <tr>
            <th><%= f.label :password, "パスワード(6文字以上)", class: "col-form-label" %></th>
            <th></th>
            <th><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></th>
          </tr>
          <tr>
            <th><%= f.label :password_confirmation, "パスワード(確認用)", class: "col-form-label" %></th>
            <th></th>
            <th><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></th>
          </tr>
          <tr>
            <th colspan="2"></th>
            <th><%= f.submit "新規登録", class: "btn btn-success my-2" %></th>
          </tr>
        </table>
      </div>
    <% end %>
      <div>
        <%= link_to "既に登録済みの方", new_customer_session_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

      <% render "public/shared/links" %>

