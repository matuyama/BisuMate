<div class="container">
  <div class="row">
    <div><%= flash[:notice] %></div>
  </div>

  <div class="row">
    <dic class="col">
      <h1>ショッピングカート</h1>
    </dic>
    <div class="col">
      <%= button_to "カートの中身をすべて削除する", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-bordred border-back">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.price_tax_including %>
            </td>
            <td>
              <%= form_with model: cart_item do |f| %>
                <%= f.select :amount, (1..10).to_a, include_blamk: cart_item.amount %>
                <%= f.submit "変更" %>
              <% end %>
            </td>
            <td>
              <%= cart_item.subtotal %>
            </td>
            <td>
              <%= button_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
            </td>
            <% @billing_price += cart_item.item.price_tax_excluded * cart_item.amount %>
          </tr>
        <% end %>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <th>合計金額</th>
            <td><%= @billing_price %></td>
          </tr>
        </tbody>
        </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= link_to "お買い物を続ける", items_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col text-center">
      <% if @cart_items.any? %>
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>