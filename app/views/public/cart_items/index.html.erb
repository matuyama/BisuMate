<div class="containaer">
  <div class="row">
    <div><%= flash[:notice] %></div>
  </div>

  <div class="row">
    <dic class="col">
      <h1>ショッピングカート</h1>
    </dic>
    <div class="col">
      <%= button_to "カートの中身をすべて削除する", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-bordred border-back">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.price_tax_including %>
            </td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td>
              <%= cart_item.subtotal %>
            </td>
            <td>
              <%= button_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        </tbody>
        <% end %>
        </table>
    </div>
  </div>
</div>