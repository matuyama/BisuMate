<div class="container">
  <div class="row">
    <div class="col">
      <h4><strong>注文履歴一覧</strong></h4>
      <table>
        <thead class="table table-bordered table-border-black">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbidy>
          <tr>
            <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= "〒 #{order.postal_code}" %><br><%= order.address %><br><%= order.name %></td>
            <td>
              <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
              <% end %>
            </td>
            <td><%= order.billing_price %></td>
            <td><%= order.status_i18n %></td>
            <td><%= link_to "詳細を表示", order_path(order), class: "btn btn-primary" %></td>
          </tr>
        </tbidy>
        <% end %>
      </table>
    </div>
  </div>
</div>