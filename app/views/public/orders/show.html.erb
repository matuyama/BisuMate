<div class="container">
  <div class="row">
    <h4><strong>注文履歴詳細</strong></h4>
  </div>

  <div class="row">
    <div class="col">
      <h6>注文情報</h6>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= "〒 #{@order.postal_code}" %><br><%= @order.address %><br><%= @order.name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col">
      <h6>請求情報</h6>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= @order.billing_price - @order.postage %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.billing_price %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-7">
      <h6>注文内容</h6>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%=order_detail.item.name %></td>
            <td><%= order_detail.price_tax_included %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>