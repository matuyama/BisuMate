<!DOCTYPE html>
<html>
  <head>
    <title>BisuMate</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <div class="container">
        <nav class="navbar navbar-expand-lg">
          <% if admin_signed_in? %>
            <a class="navbar-brand" href="/admin"><h3>BisuMate</h3></a>
          <% else %>
            <a class="navbar-brand" href="/"><h3>BisuMate</h3></a>
          <% end %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to "商品一覧", admin_items_path, class: "btn btn-default" %>
                </li>
                <li class="nav-item">
                  <%= link_to "会員一覧", admin_customers_path, class: "btn btn-default" %>
                </li>
                <li class="nav-item">
                  <%= link_to "注文履歴一覧", admin_root_path, class: "btn btn-default" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-default" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-default" %>
                </li>
              <% elsif customer_signed_in? %>
                <li class="nav-item">
                  <%= link_to "マイページ", mypage_customers_path, class: "btn btn-default" %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, class: "btn btn-default" %>
                </li>
                <li class="nav-item">
                  <%= link_to "カート", cart_items_path, class: "btn btn-default" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-default" %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "About", about_path, class: "btn btn-default" %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, class: "btn btn-default" %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-default" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_customer_session_path, class: "btn btn-default" %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
    </div>
    </header>

  <main>
    <div class="row">
      <div class="col">
        <% if flash[:notice].present? %>
          <div class="alert alert-info text-center" role="alert">
            <%= flash[:notice] %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <%= yield %>
    </div>
  </main>

    <footer></footer>

  </body>
</html>
